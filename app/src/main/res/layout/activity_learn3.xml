<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpaper"
    tools:context=".Learn3Activity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LEARN MORE"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textAlignment="center"
        android:background="#5F71CC"/>
    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Q. When a customer asks you what is the saving he shall have in a Meal combo ,What would be your reply"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:background="@drawable/button"/>
    <Button
        android:layout_width="350dp"

        android:layout_height="120dp"
        android:id="@+id/op1"
        android:layout_marginTop="20sp"
        android:text="1.Sir, When you order a beverage and a cookie it costs Rs 80 and Rs 55.On meal combo you save Rs. 50 by paying Rs. 85 extra."
        android:textAllCaps="false"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:background="@drawable/button"/>
    <Button
        android:id="@+id/op2"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="10sp"
        android:text="2. Sir there is no saving.There is no benefit in a combo plan"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:background="@drawable/button"/>
    <Button
        android:id="@+id/op3"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="10sp"
        android:text="3. Sir You would save Rs. 100."
        android:textAllCaps="false"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:background="@drawable/button"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="GO back to main menu"
        android:textColor="#A6B417"
        android:textSize="15sp"
        android:layout_marginTop="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/back"/>



</LinearLayout>